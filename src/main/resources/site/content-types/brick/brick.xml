<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Brick</display-name>
    <super-type>base:structured</super-type>
    <form>
        <field-set name="brick">
            <label>Brick</label>
            <items>
                <input name="tags" type="Tag">
                    <label>Tags</label>
                    <immutable>false</immutable>
                    <indexed>true</indexed>
                    <occurrences minimum="0" maximum="10"/>
                    <config/>
                </input>
                <input name="image" type="ImageSelector">
                    <label>Image</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="TextArea" name="preface">
                    <label>Preface</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="HtmlArea" name="bodyText">
                    <label>Body text</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
            </items>
        </field-set>
    </form>
</content-type>
